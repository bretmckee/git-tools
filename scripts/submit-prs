#! /bin/bash
set -e
set -o pipefail

MASTER=master
BRANCH=$(git rev-parse --abbrev-ref HEAD)
while [ $# -gt 0 ]
do
  PR=${1}
  shift
  SHA=$(hub pr show -f "%sH" ${PR})
  git checkout -q ${SHA}
  git pb
  # Wait for tests
  # Press the submit button 
  # change the base of any PR that used to be this branch to be master
  git checkout -q ${BRANCH}
  git fetch origin ${MASTER}:${MASTER}
  git rebase master
done
